SET client_min_messages TO WARNING;
BEGIN;

DROP SCHEMA IF EXISTS $PG_SCHEMA CASCADE;
CREATE SCHEMA $PG_SCHEMA_WEATHER;

CREATE TABLE $PG_SCHEMA_WEATHER.weather (
locale_id INTEGER NOT NULL REFERENCES $PG_SCHEMA_MAIN.locale (id) ON DELETE CASCADE ON UPDATE CASCADE,
year      INTEGER NOT NULL,
month     INTEGER NOT NULL,
tmin      DECIMAL,
tavg      DECIMAL,
tmax      DECIMAL,
precip    DECIMAL
);

COMMIT;
